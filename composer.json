{
    "name": "maxalmonte14/magicproperties",
    "description": "A little but powerful package that allows you call getters and setters implicitly in PHP.",
    "keywords": ["magicproperties", "properties", "getter", "setter", "accessor", "mutator", "trait"],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/maxalmonte14/magicproperties/issues",
        "source": "https://github.com/maxalmonte14/magicproperties"
    },
    "authors": [
        {
            "name": "Max Almonte",
            "email": "maxalmonte14@hotmail.com",
            "homepage": "https://www.devalmonte.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "MagicProperties\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        },
        "files": [
            "tests/fakes/FakeUser.php"
        ]
    },
    "require": {
        "php": "^5.4 || ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "phpstan/phpstan": "^0.10.5",
        "squizlabs/php_codesniffer": "^3.3",
        "phpstan/phpstan-strict-rules": "^0.10.1"
    },
    "scripts": {
        "test-coverage": [
            "vendor/bin/phpstan analyse src --level=7 -c phpstan.neon",
            "vendor/bin/phpcs --standard=PSR2 src",
            "vendor/bin/phpcs --standard=PSR2 tests",
            "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.clover"
        ],
        "test": [
            "vendor/bin/phpstan analyse src --level=7",
            "vendor/bin/phpcbf --standard=PSR2 src",
            "vendor/bin/phpcbf --standard=PSR2 tests"
        ]
    }
}
